@page "/SolutionPage/{Id:int}"

@inject HttpClient Http
@inject NavigationManager navigationManager


@if (Solutions == null)
{
    <p><em>Loading...</em></p>
}
else
{
    @foreach (var solution in Solutions)
    {
        <section>
            <div>
                <h5>@solution.QuestionText</h5>
                <div class="card mb-3" style="max-width: 2000px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <div class="card-body">
                                @((MarkupString)solution.SolutionText)
                            </div>
                        </div>
                        <div class="col-md-8">
                            <img style="width:65%; height: auto" src="@ConvertImageToDisplay(solution.Image)" />
                        </div>
                    </div>
                </div>
            </div>
        </section>

    }
    <br />
    <div class="w-container">
        <a class="buttonCard" @onclick="@(()=>navigationManager.NavigateTo($"Lets/{1}", true))">Voltar</a>
    </div>

}


<style>
    .card-body {
        font-size: 18px;
        vertical-align: middle;
    }

    .w-container {
        display: flex;
        width: 100%;
        height: 100%;
        align-items: center;
        flex-wrap: wrap;
        justify-content: center;
        color: white;
    }

        .w-container a {
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: #F1D072;
            margin: 1%;
            text-align: center;
            font-size: 20px;
            justify-content: center;
            border-radius: 10px;
            font-family: Poppins;
            background-color: #4A5A9F;
            cursor: pointer;
            height:40px;
            width:100px;
        }

            .w-container a:hover {
                overflow: visible;
                background-color: #F1D072;
            }


    @@media screen and (min-width: 400px) {
        .w-container a {
            height: 50px;
            width: 20%;
        }
    }
</style>

